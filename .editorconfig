## Code style
##

# Code style analyzers are all enabled and silent by default. Setting them all explicitly to override IDE settings.
dotnet_analyzer_diagnostic.category-Style.severity = suggestion
dotnet_analyzer_diagnostic.category-CodeQuality.severity = suggestion

# IDE0007: Use var instead of explicit type
dotnet_diagnostic.IDE0007.severity = silent

# IDE0008: Use explicit type instead of var
dotnet_diagnostic.IDE0008.severity = silent

# IDE0010: Add missing cases
dotnet_diagnostic.IDE0010.severity = silent

# IDE0022: Use expression body for methods
dotnet_diagnostic.IDE0022.severity = silent

# IDE0061: Use expression body for local functions
dotnet_diagnostic.IDE0061.severity = silent

# IDE0045: Convert to conditional expression
dotnet_diagnostic.IDE0045.severity = silent

# IDE0046: Use conditional expression for return
dotnet_diagnostic.IDE0046.severity = silent

# IDE0048: Add parentheses for clarity
dotnet_diagnostic.IDE0048.severity = silent

# IDE0058: Remove unnecessary expression value
dotnet_diagnostic.IDE0058.severity = silent

# IDE0065: Misplaced using directive
dotnet_diagnostic.IDE0065.severity = silent

# IDE0072: Add missing cases
dotnet_diagnostic.IDE0072.severity = silent

# IDE0305: Use collection expression for fluent
dotnet_diagnostic.IDE0305.severity = silent

